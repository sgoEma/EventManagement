<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Capacity_Check</fullName>
    <active>true</active>
    <errorConditionFormula>Session__r.Room_Capacity__c  &lt;=  Session__r.Number_of_Registered_Attendee__c</errorConditionFormula>
    <errorMessage>The capacity is full for this session. There is no additional seat for a new attendee</errorMessage>
</ValidationRule>
